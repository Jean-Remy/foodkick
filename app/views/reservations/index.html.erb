

<div class="container padded text-center">
  <div class="row">

    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a data-toggle="tab" href="#analytics">Analytics</a></li>
      <li><a data-toggle="tab" href="#now">A venir/En cours</a></li>
      <li><a data-toggle="tab" href="#past">Passées</a></li>
    </ul>
    <br>

    <div class="tab-content">
      <div id="analytics" class="tab-pane active">
        <div class="container">
          <div class="row ">
            <div class="col-xs-12 col-md-3">
              <i class="fa fa-eye analytic"></i>
              <p> Vues : <%= @restaurant.views %> </p>
            </div>
            <div class="col-xs-12 col-md-3">
              <i class="fa fa-book analytic"></i>
              <p> Réservations : <%= @reservations.count %> </p>
            </div>
            <div class="col-xs-12 col-md-3">
              <i class="fa fa-money analytic"></i>
              <p> Réservations validées : <%= @reservations.where(status: true).count %> </p>
            </div>
            <div class="col-xs-12 col-md-3">
              <i class="fa fa-comment analytic"></i>
              <p> Feedbacks reçus : <%= @reservations.where(feedbacked: true).count %> </p>
            </div>
          </div>
        </div>

      </div>
      <div id="now" class="tab-pane">
        <% @reservations.each do |reservation| %>
          <% if reservation.status == false %>
            <strong><%= reservation.user.first_name %> <%= reservation.user.last_name %></strong>
            <br>
            <%= reservation.code %>
            <br>
            <hr>
          <% end %>
        <% end %>
      </div>
      <div id="past" class="tab-pane">
        <% @reservations.each do |reservation| %>
          <% if reservation.status == true %>
            <strong><%= reservation.user.first_name %> <%= reservation.user.last_name %></strong>
            <br>
            <%= reservation.code %>
            <br>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>


