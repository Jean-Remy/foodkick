<div class="container padded text-center">
  <div class="row">

    <ul class="nav nav-tabs" data-tabs="tabs">
      <li class="active" ><a data-toggle="tab" href="#now">A venir/En cours</a></li>
      <li><a data-toggle="tab" href="#past">PassÃ©es</a></li>
    </ul>
    <br>

    <div class="tab-content">
      <div id="now" class="tab-pane active">
        <% @reservations.each do |reservation| %>
          <% if reservation.status == false %>
            <strong><%= reservation.user.first_name %> <%= reservation.user.last_name %></strong>
            <br>
            <%= reservation.code %>
            <br>
            <hr>
          <% end %>
        <% end %>
      </div>
      <div id="past" class="tab-pane">
        <% @reservations.each do |reservation| %>
          <% if reservation.status == true %>
            <strong><%= reservation.user.first_name %> <%= reservation.user.last_name %></strong>
            <br>
            <%= reservation.code %>
            <br>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>


