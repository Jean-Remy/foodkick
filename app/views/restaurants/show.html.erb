        <h3>Desserts</h3>

        <%@restaurant.courses.where(category: "Dessert").each do |dessert| %>
          <ul class="list-unstyled list-inline">
            <li><h4 ><%=dessert.name%></h4></li> <li><p> - <%=dessert.description%></p></li>
          </ul>
        <%end%>

      </div>
    </div>

    <br>


    <div class="row">
